<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.boss.cart.persistence.UserMapper">
    <cache/>

    <select id="getUserList" resultType="org.boss.cart.model.User">
    SELECT
      USERNAME,
      PASSWORD
    FROM table_user
    </select>

    <!--通过用户名得到账户信息-->
    <select id="getUserInfoByUsername" parameterType="java.lang.String" resultType="org.boss.cart.model.User">
    SELECT
      USERNAME,
      PASSWORD
    FROM table_user
    WHERE username = #{username}
    </select>

    <!--注册-->
    <insert id="setUser">
        INSERT INTO table_user
          (USERNAME, PASSWORD)
        VALUES
          (#{username}, #{password})
    </insert>

    <!--修改密码-->
    <update id="updateUser">
        UPDATE table_user SET
          PASSWORD = #{password}
        WHERE username = #{username}
    </update>

</mapper>